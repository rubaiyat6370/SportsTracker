@{
    ViewBag.Title = "Index";
}

<style>
    #container {
        background: bisque;
        width: 100%;
        height: 100%;
    }

    #groupname {
    }
</style>

<h3 style="color: brown"><u>Groups</u></h3>

<div class="container-fluid"  >
    @foreach (var grp in Model)
    {
        <div class="row panel-body" id="container">
            <div style="color: brown;" class="panel-group glyphicon-font blockquote" id="groupname">
                @grp.Groupname
            </div>
            <div class="panel-group">
                <a href="/Group/AddMember?groupId=@grp.Id"> Add member or Add yourself to the group </a>
            </div>
            <div class="panel-group">
                @Html.ActionLink("See Details of this group", "Details", new {id = grp.Id})
            </div>
        </div>
        <br/>

    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


