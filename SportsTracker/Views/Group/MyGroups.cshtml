@model ISet<SportsTracker.Models.DbModel.Group>

@{
    ViewBag.Title = "MyGroups";
}

<style>
    #container{
        background: bisque;
        width: 100%;
        height: 100%;
    }

    #groupname {
        
    }
</style>

<h3 style="color: brown"><u>My Groups</u></h3>

<div class=" container-fluid" >
    @foreach (var group in Model)
    {
        <div class="row panel-body" id="container">

            <div style="color: brown;" class="panel-group glyphicon-font blockquote" id="groupname">
                @group.Groupname
            </div>
            <div class="panel-group">
                <a href="/Group/AddMember?groupId=@group.Id"> Add member to this group </a>
                <br />
            </div>

            <div class="panel-group col-lg-4">

                <div class="row">
                    <div class="panel-group">
                        @Html.ActionLink("Edit Group Name", "Edit", new { id = group.Id })
                    </div>
                    <div class="panel-group">
                        @Html.ActionLink("See Details of this group", "Details", new { id = group.Id })
                    </div>

                </div>
            </div>
        </div>
        <br />

    }
</div>
