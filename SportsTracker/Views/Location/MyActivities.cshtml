@{
    ViewBag.Title = "MyActivities";
}

<h2>My Recent Activities</h2>

@foreach (var ac in Model)
{
    <div class="row">
        <div class="col-md-2">
            <b>Created on:</b> @ac.CreatedOn
        </div>
        <div class="col-sm-2">
            <b>Status:</b> @ac.ActivityType.Title
        </div>
        <div class="col-sm-2">
            <b>Distance Travelled:</b> @ac.Distance km
        </div>
        <div class="col-sm-2">
            <b>Calorie Burned:</b> @ac.Calorie kcal
        </div>
        <div class="col-sm-2">
            <b>Duration:</b> @ac.Duration hour
        </div>
        <div class="col-sm-2">
            <a href="/Location/Details/@ac.Id">Details</a>
        </div>
    </div>
}