@if (Request.IsAuthenticated)
{
    <ul class="dropdown-menu dropdown-user">
        <li>@Html.ActionLink(User.Identity.Name, "Manage", "Account", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })</li>
        <li class="divider"></li>
        <li>
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <a href="javascript:document.getElementById('logoutForm').submit()" style="color:#337ab7">
                    <i class="fa fa-sign-out fa-fw"></i>Log off
                </a>
            }

        </li>

    </ul>
    
